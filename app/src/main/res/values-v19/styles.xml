<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowTranslucentStatus"><!--true-->false</item>
    </style>

    <style name="TransStatusTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus"><!--true-->false</item>
    </style>


    <!--Material Design 控件使用的Style--><!--设置了以下Theme之后 Toolbar标题在收缩后显示正常而不是显示一半-->
    <style name="Design.AppBarLayoutFit" parent="Design">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Design.CollpasingToolbarLayoutFit" parent="Design">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Design.ImageViewFit" parent="Design">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Design.ToolbarFit" parent="Design">
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>