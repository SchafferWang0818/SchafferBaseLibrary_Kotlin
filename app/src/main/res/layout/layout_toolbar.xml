<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_toolbar_tb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMainTheme"
    android:fitsSystemWindows="true"
    android:maxHeight="?attr/actionBarSize"
    app:contentInsetLeft="0dp"
    app:navigationIcon="@mipmap/icon_back_white"
    app:contentInsetStart="0dp">

    <TextView
        android:id="@+id/layout_toolbar_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="marquee"
        android:focusable="false"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxWidth="@dimen/dimen_200dp"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_18sp"
        android:typeface="serif"/>

    <ImageView
        android:id="@+id/layout_toolbar_iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:padding="@dimen/dimen_5dp"
        android:src="@mipmap/icon_close"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/layout_toolbar_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="@dimen/dimen_5dp"
        android:text="right"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_14sp"
        android:visibility="gone"/>
</android.support.v7.widget.Toolbar>